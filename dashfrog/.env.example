# DashFrog Environment Variables
#
# REQUIRED: Copy this file to .env before running docker-compose
#   cp .env.example .env
#
# All variables below are REQUIRED - docker-compose will fail without them

# =============================================================================
# Application Configuration (read by config.py)
# =============================================================================

# PostgreSQL Database Connection
DASHFROG_POSTGRES_HOST=postgres
DASHFROG_POSTGRES_PORT=5432
DASHFROG_POSTGRES_DBNAME=dashfrog_test
DASHFROG_POSTGRES_USER=postgres
DASHFROG_POSTGRES_PASSWORD=postgres

# Prometheus Endpoint
DASHFROG_PROMETHEUS_ENDPOINT=http://prometheus:9090

# API Authentication
DASHFROG_API_USERNAME=admin
DASHFROG_API_PASSWORD=admin
DASHFROG_API_SECRET_KEY=change-me-in-production

# =============================================================================
# Docker Compose Infrastructure (port mappings, not read by application code)
# =============================================================================

# API Server external port
DASHFROG_API_PORT=8000

# PostgreSQL external port
DASHFROG_POSTGRES_EXTERNAL_PORT=5432

# OTLP receiver external ports
DASHFROG_OTLP_GRPC_PORT=4317
DASHFROG_OTLP_HTTP_PORT=4318

# Prometheus external port
DASHFROG_PROMETHEUS_PORT=9090

# OpenTelemetry Collector labels
DASHFROG_ENVIRONMENT=production
DASHFROG_CLUSTER=dashfrog

# Prometheus retention
PROMETHEUS_RETENTION=15d
